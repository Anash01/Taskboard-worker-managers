<div class="container align-center">
    <div class="row">

        <div style="padding-left:90px; width:30%; margin: 0 auto;">

            <h3 style="text-align:center">Add New Comments to
                <%= task.title%>
            </h3>
            <form action="/tasks/<%= task._id %>/comments" method="POST">
                <div class="group">
                    <input type="text" class="form-control" name="task[text]" placeholder="text">
                </div><br>
                <div class="group">
                    <input type="text" class="form-control" name="task[author]" placeholder="author">
                </div><br>
                <div class="group">
                    <input type="text" class="form-control" name="task[points]" placeholder="points">
                </div><br>
                <div class="group">
                    <input type="submit" class="form-control btn btn-primary">
                </div><br>
                <a href="/tasks">Go back</a>
            </form>

        </div>
    </div>
